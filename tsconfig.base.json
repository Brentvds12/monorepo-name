{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-name/shared-domain": ["libs/shared/domain/src/index.ts"],
      "@monorepo-name/shared-feature": ["libs/shared/feature/src/index.ts"],
      "@monorepo-name/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@monorepo-name/shared-util": ["libs/shared/util/src/index.ts"],
      "@monorepo-name/swe-demo-domain": ["libs/swe-demo/domain/src/index.ts"],
      "@monorepo-name/swe-demo-feature": ["libs/swe-demo/feature/src/index.ts"],
      "@monorepo-name/swe-demo-ui": ["libs/swe-demo/ui/src/index.ts"],
      "@monorepo-name/swe-demo-util": ["libs/swe-demo/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
